@model IEnumerable<Product>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="position-relative product-card">
                    <img src="@product.ImageUrl" class="w-100 shadow-1-strong" alt="@product.Title" />
                    <div class="product-overlay d-flex flex-column justify-content-center align-items-center text-center p-3">
                        <h5 class="text-light text-uppercase">@product.Title</h5>
                        <p class="text-light">by <b>Elisha</b></p>
                        <p class="text-light">@product.ListPrice.ToString("c")</p>
                        <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary border-0">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .product-card {
        position: relative;
    }

        .product-card img {
            width: 100%;
            height: auto;
        }

    .product-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
    }

    .product-card:hover .product-overlay {
        opacity: 1;
    }

    .product-overlay h5,
    .product-overlay p,
    .product-overlay a {
        color: white;
    }

    .product-overlay a {
        margin-top: 10px;
    }
</style>
